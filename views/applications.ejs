<%- include('header') -%>

<h1>Atvinnuumsóknir</h1>
<div class="applications">
    <% applications.forEach((application) => { %>
        <div class="appinfo">
            <h2><%= application.name%></h2>
            <a href="mailto:<%= application.email %>"><%= application.email %></a>
            <p>Sími: <%= application.phone %></p>
            <p>Umsókn send: <%= application.created.toISOString() %></p>
        </div>
        <div class="apptext">
            <p><%= application.text %></p>
        </div>
        <div class="butts">
            <% if(application.processed){ %>
                <p>&#10004; Umsókn unnin: <%= application.updated.toISOString() %></p>
            <% } else{ %> 
                <form method="post" action="applications/process/<%= application.id %>" class="formbutt">
                    <input type="submit" value="Vinna umsókn" name="process"></button>
                </form>
            <% } %>
            <form method="post" action="applications/delete/<%= application.id %>" class="formbutt">
                <input type="submit" value="Eyða umsókn" name="delete"></button>
            </form>
        </div>
    <% }) %>
</div>

<%- include('footer') -%>
